// stats
.mini-stat 
	padding: 15px
	margin-bottom: 20px

.mini-stat-icon 
	width: 60px
	height: 60px
	display: inline-block
	line-height: 60px
	text-align: center
	font-size: 30px
	background: none repeat scroll 0% 0% #EEE
	border-radius: 100%
	float: left
	margin-right: 10px
	color: #FFF

.mini-stat-info 
	font-size: 12px
	padding-top: 2px
	
	span
		display: block
		font-size: 30px
		font-weight: 600
		margin-bottom: 5px
		margin-top: 7px

.rounded
	border-radius: 3px !important
	
.btn 
	border-radius 0
	
.list-group
	border-radius 0
	
.tile-link, .tile-link:hover
	text-decoration none
	
.panel
	border-radius: 0
	border: 0
	.panel-heading
		border-radius: 0
		
